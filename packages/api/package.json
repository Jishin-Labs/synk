{
	"name": "@synk/api",
	"type": "module",

	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./context": {
			"types": "./dist/context.d.ts",
			"import": "./dist/context.js"
		},
		"./routers": {
			"types": "./dist/routers/index.d.ts",
			"import": "./dist/routers/index.js"
		},
		"./routers/*": {
			"types": "./dist/routers/*.d.ts",
			"import": "./dist/routers/*.js"
		}
	},

	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"sideEffects": false,

	"scripts": {
		"build": "tsdown"
	},

	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@trpc/server": "catalog:",
		"@trpc/client": "catalog:",
		"hono": "catalog:",
		"drizzle-orm": "catalog:",
		"dotenv": "catalog:",
		"zod": "catalog:",
		"@synk/auth": "workspace:*",
		"@synk/db": "workspace:*"
	},
	"devDependencies": {
		"tsdown": "catalog:"
	}
}
